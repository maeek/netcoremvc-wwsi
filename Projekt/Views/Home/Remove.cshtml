@model Notes.Models.NoteModel

@{
    ViewData["Title"] = "Remove";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Remove "@Html.DisplayFor(model => model.Name)"</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4 class="text-muted">@Html.DisplayFor(model => model.Created)</h4>
    <hr />
    <div class="row text-wrap d-flex justify-content-md-start" style="word-break: break-all">
        @Html.DisplayFor(model => model.Content)
    </div>
    <hr />
    
    <form asp-action="RemoveConfirm" method="POST">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Potwierdz Usunięcie" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
