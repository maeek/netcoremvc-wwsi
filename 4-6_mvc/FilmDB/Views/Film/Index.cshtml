@model IEnumerable<FilmDB.Models.FilmModel>

@{
  ViewData["Title"] = "Index";
}

<h1 class="display-3">Strona główna - FilmDB</h1>

<p>
  <a asp-action="Add" class="text-decoration-none">
    <button type="button" class="btn btn-success text-white">
      Create New
    </button>
  </a>
</p>
<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.ID)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Title)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Year)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
          <a asp-action="Edit" asp-route-id="@item.ID" class="text-decoration-none">
            <button type="button" class="btn btn-primary text-white">
              Edit
            </button>
          </a> |
          @*<a asp-action="Details" asp-route-id="@item.ID">Details</a> |*@
          <a asp-action="Remove" asp-route-id="@item.ID" class="text-decoration-none">
            <button type="button" class="btn btn-danger text-white">
              Remove
            </button>
          </a>
        </td>
      </tr>
    }
  </tbody>
</table>
